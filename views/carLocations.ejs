<%- include('header'); -%>

    <div class="setups_car-title text-center pt-5">
        <h1><%= car.brand %> <%= car.model %></h1>
        <h3>Class: <%= car.class %></h3>
    </div>
    <div class="container-fluid mt-3 text-center">
        <h2 class="mb-2">Locations</h2>
        <div class="container-xl d-flex flex-wrap justify-content-center">

            <% for (let i in carLocations) { %>

            <div class="card m-3 bg-dark text-white" style="width:300px">
                <div class="card-body">
                    <img 
                    class="card-img-top" 
                        src="/images/locations/<%= carLocations[i].location_image %>" 
                        alt="<%= carLocations[i].location_name %> 
                        image" style="width:50px; height:50px">
                    <p class="card-title mb-3"><%= carLocations[i].location_name %></p>
                    <a href="/cars/<%= car.model %>/<%= carLocations[i].location_name %>" class="btn btn-danger btn-block car-setup">Select</a>
                </div>
            </div>

            <% } %>

        </div>
    </div>

<%- include('footer'); -%>