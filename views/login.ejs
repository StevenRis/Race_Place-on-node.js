<%- include('header'); -%>

<div class="container mt-3 text-center">
  <div class="mt-3 pt-5">
    <img
      src="/images/logo/raceplace_logo.png"
      alt="Logo race place"
      style="width: 150px"
      class="rounded-pill" />
  </div>
  <div class="pt-3">
    <h1>Sign in to Race_Place</h1>
  </div>
  <form action="/login" method="post">
    <div class="mb-3">
      <label for="username">Username:</label>
      <input
        autocomplete="off"
        autofocus
        class="form-control mx-auto w-auto"
        id="username"
        name="username"
        type="text"
        required />
    </div>
    <div class="mb-3">
      <label for="password">Password:</label>
      <input
        class="form-control mx-auto w-auto"
        id="password"
        name="password"
        type="password"
        required />
      <a href="/password_reset">Forgot password?</a>
    </div>
    <button class="btn btn-danger" type="submit">Sign In</button>
  </form>
</div>

<%- include('footer'); -%>
